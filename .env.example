# .env.example
# ─────────────────────────────────────────────────────────
# scholaOps — Environment Variables
# Copy this to .env.local for local development
# ─────────────────────────────────────────────────────────

# ── Database ─────────────────────────────────
# Neon, Supabase, Railway, or self-hosted PostgreSQL
DATABASE_URL="postgresql://scholaops:password@localhost:5432/scholaops"

# ── Auth.js v5 ───────────────────────────────
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-minimum-32-characters-here"
AUTH_URL="http://localhost:3000"

# Google OAuth (optional)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# ── App ──────────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ── Email — Resend ───────────────────────────
RESEND_API_KEY=""
EMAIL_FROM="noreply@scholaops.app"

# ── File Uploads — UploadThing ───────────────
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# ── Payments — Stripe ────────────────────────
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
